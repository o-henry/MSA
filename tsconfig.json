{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@src/*": ["src/*"],
      "@modules/*": ["src/module/*"],
      "@config/*": ["src/infrastructure/configs/*"],
      "@exceptions": ["src/libs/exceptions"],
      "@libs/*": ["src/libs/*"]
    }
  }
}
